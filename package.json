{
	"name": "powertools",
	"displayName": "powertools",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.touppercase","onCommand:extension.tolowercase","onCommand:extension.showlinebreak"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.touppercase",
				"title": "转大写"
			},
			{
				"command": "extension.tolowercase",
				"title": "转小写"
			},
			{
				"command": "extension.showlinebreak",
				"title": "显示换行符"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.touppercase"
				},
				{
					"command": "extension.tolowercase"
				},
				{
					"command": "extension.showlinebreak"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
